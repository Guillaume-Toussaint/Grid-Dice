    <body>
        
<div class="container">
    <div class="row">
            <%- include('navbar.ejs'); %>

        <div class="col-xl">
            <div class="row">
                <div class="col-md">



                    <h2><%= infos.donnee.nomPartie%></h2>

                    <!-- Gauche-->
                    <div class="card-black">
                        <p><b>Partie cree par :</b> <%= infos.donnee.pseudoCreateur %></p>
                        <button type="button" class="btn-default" style="width: 50%">Acceder au profil</button>

                        <p><b>Systeme de jeu :</b> <%= infos.donnee.nomSysteme%></p>

                        <!--<p>horaire de la prochaine partie: 04/01/2021</p>-->

                        <p><b>Description</b></p>
                        <div class="text-zone">
                            <p><%= infos.donnee.descriptionPartie%></p>
                        </div>
                        <p><b>Caracteristique de la partie</b></p>
                        <div class="text-zone">
                            <ul>
                                <% infos.donnee.caracteristiques.forEach((carac) =>{ %>


                                    <li><%= carac.caracteristique%></li>

                                <% });  %>
                            </ul>
                        </div>
                        <button type="button" class="btn-default" style="width: 50%">Contacter l'organisateur</button>
                    </div>

                </div>
            </div>
        </div>
        </div>
    </div>
</div>

