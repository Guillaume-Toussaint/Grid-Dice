<html lang="fr" >
<head>
    <meta charset="utf-8" />
    <title>flux</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-xl">

            <!-- Gauche-->
            <div>
                <div>
                    <h5>Parceque vous avez aimez Dougeon and Dragons</h5>

                    <div class="text-zone" style="width: 18rem;">
                        <div class="card-body">
                            <h6 class="card-title">le paladin de ekumul</h5>
                                <p class="card-text">legend de troi</p>
                                <ul>
                                    <li>RPG</li>
                                    <li>Fantasy</li>
                                    <li>contenue mature</li>
                                </ul>
                                <p>3/4 joueurs</p>
                        </div>
                    </div>

                    <div class="text-zone" style="width: 18rem;">
                        <h6 class="card-title">Desciption</h6>
                        <p class="card-text">guerre de trois sang et plus</p>
                        <button type="button" class="btn-progress">Plus de details</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md">
            <!-- droite-->
            <div style="background-color:grey; border-radius: 12px; margin: 3px">
                <h5>objectifs mensuels</h5>

                <p>Jouer 5 partie</p>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">1/5</div>
                </div>
                <p>Jouer 10h</p>
                <div class="progress" style="background-color:grey; border-radius: 12px">
                    <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">5/10</div>
                </div>
                <button type="button" class="btn-progress">Obtenir recompenses</button>
            </div>
            <div style="background-color:grey; border-radius: 12px; margin: 3px">

                <h5>Evenement en cours</h5>

                <div class="text-zone">
                    <a>Evenement 1</a>
                    <a>Evenement 2</a>
                </div>

            </div>
            <div style="background-color:grey; border-radius: 12px; margin: 3px">
                <h5>prochaine evenements</h5>


                <div class="text-zone">
                    <p>date 1</p>
                    <a>Evenement 3</a>
                </div>

                <div class="text-zone">
                    <p>date 2</p>
                    <a>Evenement 4</a>
                </div>
            </div>
        </div>

    </div>
</div>

</body>
</html>
