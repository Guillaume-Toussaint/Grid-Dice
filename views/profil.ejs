<!DOCTYPE html>

<html lang="fr" >
    <head>
    <meta charset="utf-8" />
    <title>Profil</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="../style.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div class="container">
            <div class="row">
                <%- include('navbar.ejs'); %>
                <div class="col-xl">
                <!-- Navbar Profil/Contact-->
                    <nav class="navbar navbar-expand ">
                        <div class="navbar-nav me-auto mb-2 mb-lg-0">
                            <a class="nav-link bg-secondary" aria-current="page" href="#">Profil</a>
                            <a class="nav-link bg-secondary" href="/contacts">Contacts</a>
                        </div>
                    </nav>

                <!-- Card profil-->
                    <div class="row align-items-center bg-secondary">
                        <div class="col" >
                            <h5>Nom utilisateur</h5>
                            <p><%= infos.pseudo%></p>
                        </div>
                        <div class="col">
                            <h5>Pays</h5>
                            <p><%= infos.pseudo%></p>
                        </div>
                        <div class="col">
                            <h5>Fuseau horaire</h5>
                            <p><%= infos.fuseauHorraireJoueur%></p>
                        </div>
                        <div class="col">
                            <h5>Description</h5>
                            <p><%= infos.description%></p>
                        </div>
                    </div>

                    <div class="row align-items-center bg-secondary">
                        <h5>preference de jeu <a href="/edit" <i class="bi bi-pencil-square"></i></h5></a>
                        <div class="col">
                            <div>
                                <p>Niveu de jeu</p>
                                <ul>

                                    <% 
                                    preference[0].forEach((element) =>{ %>
                                    <li><%= element.Valeur%></li>
                                    <% });  %>

                                </ul>
                            </div>
                            <div>
                                <p><b>Genre</b></p>
                                <ul>

                                    <% preference[1].forEach((element) =>{ %>
                                    <li><%= element.Valeur%></li>
                                    <% });  %>

                                </ul>
                            </div>
                        </div>
                        <div class="col">
                            <div>
                                <p>Systeme de preference</p>
                                <ul>

                                    <% preference[2].forEach((element) =>{ %>
                                    <li><%= element.Valeur%></li>
                                    <% });  %>

                                </ul>
                            </div>
                            <div>
                                <p>Meta</p>
                                <ul>

                                    <% preference[3].forEach((element) =>{ %>
                                    <li><%= element.Valeur%></li>
                                    <% });  %>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
